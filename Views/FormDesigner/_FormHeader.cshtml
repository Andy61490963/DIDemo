@* 表單基本設定區塊（FORM_NAME、TABLE_NAME） *@

@using ClassLibrary
@model FormHeaderViewModel?

<div class="row g-3 align-items-end">
    <div class="col-md-6 col-lg-3">
        <label asp-for="FORM_NAME" class="form-label">表單代碼</label>
        <input asp-for="FORM_NAME" class="form-control" />
    </div>
    <div class="col-md-6 col-lg-3">
        <label asp-for="TABLE_NAME" class="form-label">表格名稱</label>
        <div class="input-group">
            <input asp-for="TABLE_NAME" class="form-control" id="tableNameInput" data-type=@TableSchemaQueryType.OnlyTable.ToInt() />
            <button class="btn btn-info" type="button" id="btnSearchTable">
                <i class="bi bi-search"></i> 搜尋
            </button>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <label asp-for="DISPLAY_VIEW_NAME" class="form-label">顯示用 View 名稱</label>
        <div class="input-group">
            <input asp-for="DISPLAY_VIEW_NAME" class="form-control" id="viewTableNameInput" data-type=@TableSchemaQueryType.OnlyView.ToInt() />
            <button class="btn btn-info" type="button" id="btnSearchViewTable">
                <i class="bi bi-search"></i> 搜尋
            </button>
            <button class="btn btn-primary" type="button" id="btnSaveFormHeader">
                <i class="bi bi-save"></i> 儲存
            </button>
        </div>
    </div>
</div>
