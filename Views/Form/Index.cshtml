@model FormListDataViewModel
@{
    ViewData["Title"] = "資料列表";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2 class="fw-bold">資料列表</h2>
        <a class="btn btn-primary" asp-controller="Form" asp-action="Create" asp-route-formId="@Model.FormId">新增</a>
    </div>
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
        <tr>
            @foreach (var col in Model.Columns)
            {
                <th>@col</th>
            }
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        @for (int r = 0; r < Model.Rows.Count; r++)
        {
            var row = Model.Rows[r];
            <tr>
                @for (int c = 0; c < Model.Columns.Count; c++)
                {
                    <td>@row.Values[c]</td>
                }
                <td>
                    <a class="btn btn-sm btn-outline-primary"
                       asp-controller="Form"
                       asp-action="Get"
                       asp-route-formId="@Model.FormId"
                       asp-route-id="@row.Id">編輯</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>