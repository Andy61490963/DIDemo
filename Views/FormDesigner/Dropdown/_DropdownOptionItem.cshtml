@model List<FORM_FIELD_DROPDOWN_OPTIONS>

<ul class="list-group">
    @foreach (var opt in Model)
    {
        <li class="list-group-item d-flex align-items-center gap-3 py-2 px-3"
            data-option-id="@opt.ID"
            data-dropdown-id="@opt.FORM_FIELD_DROPDOWN_ID">

            <div class="flex-grow-1">
                <input type="text"
                       class="form-control form-control-sm option-value"
                       value="@opt.OPTION_VALUE"
                       placeholder="VALUE" />
            </div>

            <div class="flex-grow-1">
                <input type="text"
                       class="form-control form-control-sm option-text"
                       value="@opt.OPTION_TEXT"
                       placeholder="請輸入選項文字" />
            </div>

            <div class="flex-grow-1">
                <input type="text"
                       class="form-control form-control-sm option-table"
                       value="@opt.OPTION_TABLE"
                       placeholder="OPTION_TABLE" />
            </div>

            <button type="button"
                    class="btn btn-sm btn-outline-danger deleteOption"
                    title="刪除此選項">
                <i class="bi bi-trash"></i> 刪除
            </button>
        </li>
    }
</ul>