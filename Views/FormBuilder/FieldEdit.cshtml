@model FormField

<h2>新增欄位</h2>
<form asp-action="AddField" method="post">
    <input type="hidden" asp-for="FormId" />

    <div class="form-group">
        <label asp-for="FieldLabel"></label>
        <input asp-for="FieldLabel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FieldKey"></label>
        <input asp-for="FieldKey" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FieldType"></label>
        <select asp-for="FieldType" class="form-control">
            <option value="text">文字</option>
            <option value="textarea">多行文字</option>
            <option value="select">下拉選單</option>
            <option value="checkbox">核取方塊</option>
            <option value="date">日期</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IsRequired"></label>
        <input asp-for="IsRequired" type="checkbox" class="form-check-input" />
    </div>
    <div class="form-group">
        <label asp-for="DefaultValue"></label>
        <input asp-for="DefaultValue" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FieldOptions">選項 JSON</label>
        <textarea asp-for="FieldOptions" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="FieldOrder">排序</label>
        <input asp-for="FieldOrder" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">儲存欄位</button>
</form>