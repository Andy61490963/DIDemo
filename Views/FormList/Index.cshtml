@model List<FORM_FIELD_Master>
@using DynamicForm.Models
@{
    ViewData["Title"] = "Form List";
    var statusMap = new Dictionary<int, string>
    {
        {0, "Draft"},
        {1, "Active"},
        {2, "Disabled"}
    };
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2 class="fw-bold">表單列表</h2>
        <a class="btn btn-primary" asp-controller="FormDesigner" asp-action="Index">新增表單</a>
    </div>

    <form class="mb-3" method="get">
        <div class="input-group">
            <input type="text" name="q" value="@ViewBag.Query" class="form-control" placeholder="搜尋 FORM_NAME">
            <button class="btn btn-outline-secondary" type="submit">搜尋</button>
        </div>
    </form>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
        <tr>
            <th>FORM_NAME</th>
            <th>BASE_TABLE_NAME</th>
            <th>VIEW_TABLE_NAME</th>
            @* <th>PRIMARY_KEY</th> *@
            <th>STATUS</th>
            <th>SCHEMA_TYPE</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FORM_NAME</td>
                    <td>@item.BASE_TABLE_NAME</td>
                    <td>@item.VIEW_TABLE_NAME</td>
                    @* <td>@item.PRIMARY_KEY</td> *@
                    <td>@statusMap.GetValueOrDefault(item.STATUS, item.STATUS.ToString())</td>
                    <td>@item.SCHEMA_TYPE.ToString()</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-controller="FormDesigner" asp-action="Index" asp-route-id="@item.ID">編輯</a>
                        <form asp-action="Delete" asp-route-id="@item.ID" method="post" class="d-inline" onsubmit="return confirm('確定刪除?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">刪除</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">尚無表單資料</td></tr>
        }
        </tbody>
    </table>
</div>
